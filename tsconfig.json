{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "declaration": true,
    "target": "es5",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "lib": ["es2018", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/majorNetwork.ts",
    "src/network.ts"
  ],
  "exclude": ["node_modules", "build"]
}
