{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build/esm",
    "declaration": true,
    "target": "ES2015",
    "moduleResolution": "node",
    "module": "ESNext",
    "strict": true,
    "lib": ["es2018", "dom"]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
