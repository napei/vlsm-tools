{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "declaration": true,
    "target": "es5",
    "module": "CommonJS",
    "strict": true,
    "lib": ["dom"],
    "esModuleInterop": true
