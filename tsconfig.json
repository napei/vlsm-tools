{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build/esm",
    "declaration": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ES2020",
    "lib": ["es2020", "dom"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  // , "test/**/*.ts"
  "exclude": ["node_modules", "build"]
}
